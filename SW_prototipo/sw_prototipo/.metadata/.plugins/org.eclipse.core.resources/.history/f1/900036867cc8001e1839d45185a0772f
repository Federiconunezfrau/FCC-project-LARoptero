#ifndef INC_CIRCULARBUFFER_H_
#define INC_CIRCULARBUFFER_H_

#include <stdint.h>

typedef struct
{
    uint8_t *buf;
    uint32_t size;
    uint32_t read;
    uint32_t write;
} circularBuffer_t;

void circularBuffer_constructor ( circularBuffer_t*, uint8_t*, uint8_t, uint8_t, uint8_t );

uint_t circularBuffer_length_data ( circularBuffer_t* );

/**
 * Ecribe un dato en el buffer circular
 * @param Buffer
 * @param data
 * @return 
 */
ErrorBuffer BufferWrite(CircularBuffer* Buffer, uint8_t data);
ErrorBuffer BufferRead(CircularBuffer* Buffer, uint8_t *data);

#endif	/* BUFFER_CIRCULAR_H */
