#ifndef INC_OBSERVER_H_
#define INC_OBSERVER_H_

#include <stdint.h>

#define MAX_NUM_OBSERVERS 5

typedef struct __subject_t subject_t;
typedef void (*notificationHandle_t)(void*, subject_t*);

typedef struct
{
	void *mObserver_;
	notificationHandle_t mCallback_;
} observer_t;

struct __subject_t
{
	observer_t *mObservers_[MAX_NUM_OBSERVERS];
	uint8_t     mObserversInUse_[MAX_NUM_OBSERVERS];
};

void subject_constructor  ( subject_t * );
void subject_destructor   ( subject_t * );
void subject_attach       ( subject_t *, observer_t* );
void subject_dettach      ( subject_t *, observer_t* );

void observer_constructor ( observer_t * );
void observer_destructor  ( observer_t * );

#endif /* INC_OBSERVER_H_ */
