/* Includes ------------------------------------------------------------------*/
#include "main.h"

/* USER CODE BEGIN Includes */

#include "types.h"

// Encabezado del callback para notficar a los observadores
typedef void (*uartCallback_t)(void *, uint8_t*, uint32_t);

/* USER CODE END Includes */

extern UART_HandleTypeDef huart3;

/* USER CODE BEGIN Private defines */
#define MAX_UART_OBSERVERS 1
/* USER CODE END Private defines */

void MX_USART3_UART_Init(void);

/* USER CODE BEGIN Prototypes */
void     uart3_enable_rx  ( void );
void     uart3_disable_rx ( void );
status_t uart3_read       ( uint8_t*, uint32_t );
status_t uart3_send       ( uint8_t[], uint32_t );
uint8_t  uart3_attach     ( void *, uartCallback_t );
uint8_t uart3_dettach     ( void *, uartCallback_t );
